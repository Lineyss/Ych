<Page x:Class="WpfApp1.Views.Pages.PWriteNewPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:WpfApp1.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PWriteNewPassword">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Придумайте новый пароль" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>

        <PasswordBox Name="Password" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="364" Height="36" materialDesign:HintAssist.Hint=" Новый пароль"/>
        <PasswordBox Name="PasswordConfirm" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="364" Height="36" materialDesign:HintAssist.Hint=" Подтвердить пароль"/>

        <Button Grid.Row="3" Content="Подтвердить" HorizontalAlignment="Center" VerticalAlignment="Center" Width="144" Height="48" Background="#FFADADAD" Click="Button_Click"/>
    </Grid>
</Page>

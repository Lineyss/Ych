<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        
        <Frame Name="frame" Grid.ColumnSpan="2" Content="" Source="/Views/Pages/AuthP.xaml" NavigationUIVisibility="Hidden" />

        <Button x:Name="BAuth" Grid.Column="0" Grid.Row="6"  Height="40" Background="#FFD9D9D9" Content="Авторизоваться" FontSize="20" Margin="20,0,20,5" Click="BAuth_Click"/>
        <Button x:Name="BReg" Grid.Column="1" Grid.Row="6" Background="#FFD9D9D9" Content="Регистрация" FontSize="20" Height="40" Margin="20,0,20,5" Click="BReg_Click"/>
    </Grid>
</Window>